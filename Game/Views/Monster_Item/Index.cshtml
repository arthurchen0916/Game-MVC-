@model IEnumerable<Game.Models.Monster_Item>

@{
    ViewBag.Title = "Index";
    if (Session["UserID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<h2>怪物掉落物品資料表</h2>

<p>
    <a href="@Url.Action("Index","Home")">返回至功能主控版</a>
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MonsterID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MonsterID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MonsterID, id2 = item.ItemName}) |
            @Html.ActionLink("Details", "Details", new { id = item.MonsterID, id2 = item.ItemName }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MonsterID, id2 = item.ItemName })
        </td>
    </tr>
}

</table>
